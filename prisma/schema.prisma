// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  password    String
  firstName   String
  lastName    String
  pesel       Int      @unique
  phoneNumber Int
  role        UserRole
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model AssetSubject {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
}

model AssetAuthor {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
}

enum UserRole {
  LIBRARIAN
  READER
}
